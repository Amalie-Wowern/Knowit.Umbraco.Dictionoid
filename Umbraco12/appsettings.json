{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    }
  },
  "Umbraco": {
    "CMS": {
      "Global": {
        "Id": "327081b0-90e0-4785-9a5e-041635a87025",
        "SanitizeTinyMce": true
      },
      "Content": {
        "AllowEditInvariantFromNonDefault": true,
        "ContentVersionCleanupPolicy": {
          "EnableCleanup": true
        }
      },
      "Unattended": {
        "UpgradeUnattended": true
      },
      "Security": {
        "AllowConcurrentLogins": false
      }
    }
  },
  "Knowit.Umbraco.Dictionoid.ChatGPT": {
    "Enabled": false,
    "ApiKey": "your-key-here",
    "ModelId": "gpt-4-turbo-preview",
    "CreateOnNotExist": true,
    "CleanupAfterCreate": false,
    "CleanupInBackoffice": true,
    "TrackHistory": true,
    "FrontendApi": {
      "Expose": true,
      "Secret": "my Secret!",
      "TranslateOnMissing": true
    }
  },
  "Knowit.Umbraco.Dictionoid.AzureAiApi": {
    "Enabled": true,
    "ResourceId": "kxcph-openai",
    "DeploymentId": "kxcph-gpt-35-turbo",
    "ApiVersion": "2024-02-01",
    "ApiKey": "your-key-here",
    "CreateOnNotExist": true,
    "CleanupAfterCreate": false,
    "CleanupInBackoffice": true,
    "TrackHistory": true,
    "FrontendApi": {
      "Expose": true,
      "Secret": "my Secret!",
      "TranslateOnMissing": true
    }
  }
}
